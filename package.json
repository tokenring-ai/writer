{
	"name": "@token-ring/writer",
	"description": "TokenRing CoderWriter Application",
	"version": "0.1.0",
	"bin": {
		"tr-writer": "dist/tr-writer.js"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.48.4",
		"@inquirer/prompts": "^7.8.0",
		"@token-ring/ai-client": "0.1.0",
		"@token-ring/chat": "0.1.0",
		"@token-ring/chrome": "0.1.0",
		"@token-ring/cli": "0.1.0",
		"@token-ring/eslint-config": "0.0.0",
		"@token-ring/feedback": "0.1.0",
		"@token-ring/ghost-io": "0.1.0",
		"@token-ring/history": "0.1.0",
		"@token-ring/local-filesystem": "0.1.0",
		"@token-ring/memory": "0.1.0",
		"@token-ring/queue": "0.1.0",
		"@token-ring/registry": "0.1.0",
		"@token-ring/sqlite-storage": "0.1.0",
		"@token-ring/template": "0.1.0"
	},
	"devDependencies": {
		"@radically-straightforward/package": "^2.0.1",
		"esbuild": "^0.24.2",
		"vitest": "^2.1.9",
		"husky": "^9.1.7",
		"trufflehog": "^0.0.5",
		"ts": "^0.2.2"
	},
	"license": "MIT",
	"scripts": {
		"preinstall": "test -f pkg/ai-client/package.json || echo 'Updating git submodules...' && git submodule update --init --recursive",
		"build-container": "docker build -t token-ring/writer:latest -f docker/Dockerfile .",
		"writer-container": "docker run -ti --net host -v ./:/repo:rw token-ring/writer:latest",
		"code-debug": "bun --inspect src/tr-writer.js --source ./",
		"writer": "bun src/tr-writer.js --source ./",
		"eslint": "eslint --fix ./",
		"test": "vitest run tests/build.test.js",
		"prepare": "husky"
	},
	"type": "module",
	"workspaces": ["pkg/*"]
}
