  "LICENSE",
  "README.md"
 ],
 "scripts": {
  "build": "bun build --compile --outfile=dist/tr-writer src/tr-writer.ts",
  "prepublishOnly": "bun run build",
  "writer": "bun src/tr-writer.js --source ./",
  "test": "vitest run",
